%center
  %h1 Канал продаж

- if @sale_channel.errors.any?
  .alert.alert-danger
    %h5= t('common.errors')
    %ul
      - @sale_channel.errors.full_messages.each do |message|
        %li= message
= form_for @sale_channel do |f|
  .row.m-2
    .col-2
      %label= t('stat_zatrs.form.name')
    .col-8
      %input{ :name => 'sale_channel[name]', :class => 'form-control', :value => @sale_channel.name }
  %br
  .row.m-2
    = f.submit t('common.save'), :class => 'btn btn-primary'
    = link_to t('common.cancel'), :back, :class => 'btn btn-outline-second'

