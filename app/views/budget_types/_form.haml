- if @budget_type.errors.any?
  .alert.alert-danger
    %h5= t('common.errors')
    %ul
      - @budget_type.errors.full_messages.each do |message|
        %li= message

= form_for @budget_type do |f|
  .row.form-group
    .col-2
      %label= t('spr_budget_types.form.name')
    .col-8
      %input{ :name => 'budget_type[name]', :class => 'form-control', :value => @budget_type.name }

  .row.form-group
    = f.submit t('common.save'), :class => 'btn btn-primary'
    = link_to t('common.cancel'), :back, :class => 'btn btn-outline-second'
